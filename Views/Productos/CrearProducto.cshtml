@model InventarioNet6.Models.Productos
@{
    ViewData["Title"] = "Agregar Producto";
}

<h2 class="text-success text-center">Agregar Producto</h2>

<form asp-action="CrearProducto" method="post">
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" type="text">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="Precio">Precio</label>
            <input asp-for="Precio" class="form-control" type="number">
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="Stock">Stock</label>
            <input asp-for="Stock" class="form-control" type="number">
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="Id_Categoria">Categor√≠a</label>
            <input asp-for="Id_Categoria" class="form-control" type="number">
            <span asp-validation-for="Id_Categoria" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            <input type="submit" value="Guardar Producto" class="btn btn-success">
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}